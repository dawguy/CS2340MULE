<?xml version="1.0" encoding="UTF-8"?>
<project name="MULE" default="compile" basedir=".">
	<property name="MuleSrc" value="MuleGame/src" />
	<property name="buildDir" value="Build" />
	<property name="libclasspath" value="MuleGame-desktop/libs;MuleGame/libs" />
	<target name="init">
		<echo> Creating Build Dir : ${buildDir} </echo>
		<mkdir dir="${buildDir}"/>
	</target>
	<target name="compile">
		<echo>Compiling all source code </echo>
		<javac srcdir="${MuleSrc}" 
			destdir="${buildDir}"
			classpath="${libclasspath}" />
	</target>
</project>
